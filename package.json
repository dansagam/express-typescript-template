{
  "name": "bg-boiler",
  "version": "1.0.0",
  "main": "dist",
  "author": "kayode ogunnowo",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project ./tsconfig.json",
    "start": "node ./src/index.ts",
    "server": "nodemon -q src/index.ts",
    "dev": "concurrently \"tsc --project ./tsconfig.json --watch\" \"npm run server\"",
    "dev-main": "tsc --project ./tsconfig.json --watch & nodemon dist",
    "help": "nodemon --watch 'src' -e ts,tsx --exec ts-node ./src",
    "test": "jest",
    "format": "prettier --write \"**/*.+(js|jsx|json|css|md|ts|tsx)\"",
    "format:check": "prettier --list-different \"src/**/*.{js,jsx,json,css,md,ts,tsx}\"",
    "pretty-quick": "pretty-quick",
    "prepare": "husky install",
    "lint-and-fix": "eslint . --ext .ts .tsx --fix",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\""
  },
  "dependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@prisma/client": "^4.4.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-jwt": "^7.7.5",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "prisma": "^4.4.0",
    "swagger-ui-express": "^4.5.0",
    "ts-openapi": "^1.1.4",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "./src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "./src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "./*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "./*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/module-alias": "^2.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "concurrently": "^7.4.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3"
  }
}
